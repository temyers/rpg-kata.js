{
  "compilerOptions": {
    "composite": true,
    "lib": [
      "es2017"
    ],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2015",
    "outDir": "lib",
    "strict": true
  },
  "include": [
    "./**/*.ts", "features/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
  ],
  "compileOnSave": true
}
