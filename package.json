{
  "name": "rpg-kata",
  "version": "1.0.0",
  "description": "rpg-kata exercise in JavaScript",
  "main": "index.js",
  "watch": {
    "mocha": "{lib,test}/**/*.js",
    "cucumber": {
      "patterns": [
        "lib",
        "features"
      ],
      "extensions": "js,feature"
    }
  },
  "scripts": {
    "mocha": "mocha",
    "cucumber": "cucumber-js",
    "test": "npm-run-all --silent -c test:standard test:eventSourcing",
    "test:standard": "npm-run-all --silent -c mocha cucumber",
    "test:eventSourcing": "FF_EVENTSOURCE=true npm-run-all --silent -c mocha cucumber",
    "test:coverage": "nyc npm-run-all --silent -c mocha cucumber",
    "watch": "npm-watch"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:temyers/rpg-kata.js.git"
  },
  "keywords": [
    "kata",
    "bdd",
    "cucumber"
  ],
  "author": "Mechanical Rock",
  "homepage": "https://github.com/temyers/rpg-kata.js",
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/cucumber": "^6.0.1",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.2",
    "chai": "^4.2.0",
    "cucumber": "^6.0.5",
    "cucumber-pretty": "^6.0.0",
    "mocha": "^8.1.3",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.7.0",
    "nyc": "^15.1.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {}
}
